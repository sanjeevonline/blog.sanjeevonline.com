#social_bottom.topsocial
    .social
        - var socialstags = _.chain(article.metadata.tags).map(function(tag) {
        -   return "#" + tag
        - }).value().join(" ")
            a(href=article.url, class="twitter-share-button", data-url=locals.url + article.url, data-text=article.title + " #{socialstags} /via @sandee_sh", data-count="vertical"): twitter-share-button
        | <script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
    .social
        <g:plusone size="tall" href="#{locals.url}#{article.url}"></g:plusone>
    .social
        | <script type="IN/Share" data-url="#{locals.url}#{article.url}" data-counter="top"></script>
    .social
        .fb-like(data-href='#{locals.url}#{article.url}', data-width='450', data-layout='box_count', data-show-faces='true', data-send='false')
